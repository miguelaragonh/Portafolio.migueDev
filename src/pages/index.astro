---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Skills from "@/components/Skills.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Tools from "@/components/icons/Tools.astro";
import Experience from "@/components/Experience.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SectionContainer from "@/components/SectionContainer.astro";

import Hero from "@/components/Hero.astro";
import FormContact from "@/components/FormContact.astro";
---

<Layout
  title="Porfolio de Miguel Aragón - Desarrollador y Programador Web "
  description="Desarrollador Web, especializado en crear aplicaciones únicas."
>
  <main class="px-4 sm:px-6">
    <SectionContainer
      id="inicio"
      class="py-14 sm:py-24 md:py-34 flex justify-center items-center"
    >
      <Hero />
    </SectionContainer>
  </main>
  <div class="space-y-24">
    <div data-aos="fade-up" data-aos-duration="1500">
      <SectionContainer id="experiencia">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <Briefcase class="size-8" />
          Experiencia
        </h2>
        <Experience />
      </SectionContainer>
    </div>

    <div data-aos="fade-up" data-aos-duration="1500">
      <SectionContainer id="proyectos">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <CodeIcon class="size-7" />
          Proyectos
        </h2>
        <Projects />
      </SectionContainer>
    </div>

    <div data-aos="fade-up" data-aos-duration="1500">
      <SectionContainer id="tecnologias">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-b
lack/80 dark:text-white"
        >
          <Tools class="size-7" />
          Tecnologias
        </h2>
        <Skills />
      </SectionContainer>
    </div>

    <div data-aos="fade-up" data-aos-duration="1500">
      <SectionContainer id="sobre-mi">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <ProfileCheck class="size-8" />
          Sobre mí
        </h2>
        <AboutMe />
      </SectionContainer>
    </div>

    <div data-aos="fade-up" data-aos-duration="1500">
      <SectionContainer id="contacto">
       <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <MailIcon class="size-8" />
          Contáctame
        </h2>
        <FormContact />
      </SectionContainer>
    </div>
  </div>
</Layout>
