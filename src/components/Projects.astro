---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Laravel from "./icons/Laravel.astro";
import Css3 from "./icons/Css3.astro";
import JS from "./icons/JS.astro";
import Php from "./icons/Php.astro";
import React from "./icons/React.astro";

const TAGS = {
  LARAVEL: {
    name: "Laravel",
    class: "bg-black text-white",
    icon: Laravel,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-gray-100",
    icon: Css3,
  },
  JS: {
    name: "JavaScript",
    class: "bg-[#FFd700] text-black",
    icon: JS,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#AEB2D5] text-blue-900",
    icon: Php,
  },
  REACT: {
    name: "React Js",
    class: "bg-[#61DBFB] text-black",
    icon: React,
  },
};
const PROJECTS = [
  {
    title: "DestinoCr",
    description:
      "Sistema Experto para recomendaciones turisticas a lo largo y ancho del pais de Costa Rica",
    link: "https://destinoscr2.000webhostapp.com/",
    github: "https://github.com/miguelaragonh/Proyecto-1-SE--V2",
    image: "/projects/DestinoCR.PNG",
    tags: [TAGS.LARAVEL, TAGS.CSS, TAGS.JS, TAGS.PHP],
  },
  {
    title: "Traductor",
    description:
      "Sistema de traduccion online que utiliza una API para acceder a servicios de traducción en línea. Con esta aplicación, los usuarios pueden ingresar texto en un idioma y obtener una traducción instantánea en otro idioma de su elección. ",
    link: "https://traductomigudev.netlify.app/",
    github: "https://github.com/miguelaragonh/Traductor",
    image: "/projects/traductor.png",
    tags: [TAGS.REACT, TAGS.CSS, TAGS.JS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt=""
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h1>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-1 rounded-full text-xs ${tag.class} py-1 px-2 items-center justify-center`}
                  >
                    <tag.icon class="size-1" width={18} height={18} />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
